<Window x:Class="GreedySnake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="500" Width="500" KeyUp="Window_KeyUp_1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <Canvas Grid.Row="0">
            <Button x:Name="btnStart" Content="Start" Canvas.Left="134" Canvas.Top="10" Width="75" Height="50" Click="btnStart_Click" />
            <Button x:Name="btnRestart" Content="Restart" Canvas.Left="240" Canvas.Top="10" Width="75" Height="50" Click="btnRestart_Click"/>
            <Button x:Name="btnPause" Content="Pause" Canvas.Left="354" Canvas.Top="10" Width="75" Height="50" Click="btnPause_Click"/>
        </Canvas>
        <Grid Grid.Row="1" Name="opRegion" ShowGridLines="True">
            
            
        </Grid>
    </Grid>
</Window>
